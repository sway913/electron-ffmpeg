{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/utils/**/*",
    "src/models/**/*",
    "src/interfaces/**/*",
    "src/constants/**/*",
    "src/common/**/*",
    "src/preload/**/*",
    "typings/electron.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strictNullChecks": true,
    "types": ["electron-vite/node"],
    "baseUrl": ".",
    "paths": {
      "@main/*": [
        "src/main/*", 
      ],
      "@constants/*": [
        "src/constants/*", 
      ],
      "@common/*": [
        "src/common/*", 
      ],
      "@interfaces/*": [
        "src/interfaces/*", 
      ],
      "@models/*": [
        "src/models/*", 
      ],
      "@utils/*": [
        "src/utils/*", 
      ],
      "@preload/*":[
        "src/preload/*"
      ],
      "@resources/*": [
        "resources/*"
      ]
    }
  }
}
